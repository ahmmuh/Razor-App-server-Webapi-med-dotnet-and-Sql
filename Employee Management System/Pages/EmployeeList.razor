@page "/"
@inherits EmployeeListBase

<div class="container">
@*
    <div class="spinner-border" role="status">
        <span class="sr-only"></span>
    </div>*@
    <div class="row">
          @foreach (var employee in employees)
          {
        <div class="col-4 mb-3">
                <div class="card">
                <div class="card-header">
                    <h6 class="card-title">@employee.Firstname @employee.Lastname</h6>
                </div>
                <div class="card-body">
                    <h5 class="card-text">E-post: @employee.Email</h5>
                    <p>Kön: @employee.Gender</p>


                    <div class="d-flex justify-content-between align-items-end">
                       <a href="@employee.Id" class="btn btn-outline-primary w-100">View</a>
                        <a href="@employee.Id" class="btn btn-outline-info w-100">Edit</a>
                       <a href="@employee.Id" class="btn btn-outline-danger w-100">Delete</a>
                    </div>
                </div>
            </div>
        </div>
          }
        </div>

    </div>
